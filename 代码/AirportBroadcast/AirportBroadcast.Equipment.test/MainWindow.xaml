<Window x:Class="AirportBroadcast.Equipment.test.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:AirportBroadcast.Equipment.test"
        mc:Ignorable="d" 
        Title="测试窗口" Height="450" Width="800">
    <Grid>
        <Button Click="Button_Click" Content="测试" VerticalAlignment="Top" HorizontalAlignment="Center"/>
        <ListBox Name="lstMsg" Margin="20"  >
            <ListBox.ItemTemplate>
                <DataTemplate>
                    <TextBlock  Text="{Binding}"/>
                </DataTemplate>
            </ListBox.ItemTemplate>
        </ListBox>
    </Grid>
</Window>
