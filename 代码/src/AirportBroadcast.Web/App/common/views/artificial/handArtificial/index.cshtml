<div ng-controller="common.views.artificial.handArtificial.index as vm">
    <div class="row margin-bottom-5">
        <div class="col-xs-6">
            <div class="page-head">
                <div class="page-title">
                    <h1>
                        <span>人工插播</span>
                    </h1>
                </div>
            </div>
        </div>
    </div>
    <div class="portlet light margin-bottom-0">

        <label style="font-weight:bolder;font-size:14px;">需要播放的语音</label>
        <textarea type="text" multiple="multiple" class="form-control edited"
                  style="height:120px;width:100%"
                  ng-model="vm.entity.playText" required />

        <label style="font-weight:bolder;font-size:14px;padding-top:10px;">播放次数</label>
        <input type="number"   class="form-control edited" style="width:120px;"               
                  ng-model="vm.entity.playTimes" required />

        <div class="md-checkbox-list">
            <div class="row" style="font-weight:bolder;padding:10px 18px; ">
                <div class="col">
                    播放区域端口选择
                </div>
            </div>
            <div class="row" style="padding:0px 18px;">
                <div class="md-checkbox" ng-repeat="item in vm.topPwrPortList">
                    <div class="col col-md-6">
                        <input id="EditUser_{{item.id}}" class="md-check" type="checkbox" name="isCanSetAllCarryStation{{item.id}}" ng-model="item.isChoose">
                        <label for="EditUser_{{item.id}}">
                            <span class="inc"></span>
                            <span class="check"></span>
                            <span class="box"></span>
                            {{item.code}} - {{item.name}} （{{item.remark}}）
                        </label>
                    </div>
                </div>
            </div>
        </div>
        <div class="modal-footer">
            <button type="button" button-busy="vm.saving" busy-text="刷新中" class="btn btn-default" ng-click="vm.init()"><i class="fa fa-refresh"></i> 刷新</button>
            <button type="submit" button-busy="vm.saving" busy-text="加载中" class="btn btn-primary blue" ng-click="vm.HandPlay()" ng-disabled="createOrEditForm.$invalid"><i class="fa fa-save"></i> <span>播放</span></button>
        </div>

    </div>
</div>