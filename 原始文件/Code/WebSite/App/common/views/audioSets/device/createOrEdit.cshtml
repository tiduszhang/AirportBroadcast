<div>
    <form name="createOrEditForm" role="form" novalidate class="form-validation">
        <div class="modal-header">
            <h4 class="modal-title">
                <span ng-if="vm.entity.id">编辑: {{vm.entity.name}}</span>
                <span ng-if="!vm.entity.id">添加</span>
            </h4>
        </div>
        <div class="modal-body">
            <uib-tabset class="tab-container tabbable-line">
                <uib-tab heading="基本信息">
                    <div class="form-group form-md-line-input form-md-floating-label no-hint  margin-bottom-0">
                        <label>编号</label>
                        <input type="text" class="form-control edited" ng-model="vm.entity.code" required />
                    </div>
                    <div class="form-group form-md-line-input form-md-floating-label no-hint margin-bottom-0">
                        <label>名称</label>
                        @*<input type="text" class="form-control edited" ng-model="vm.entity.name" required />*@
                        <select class="form-control"
                                ng-model="vm.entity.name"
                                ng-options="x for x in vm.voiceDevice">
                        </select>
                    </div>
                    <div class="form-group form-md-line-input form-md-floating-label margin-bottom-0">
                        <label>说明</label>
                        <input type="text" class="form-control edited" ng-model="vm.entity.remark" />
                    </div>
                </uib-tab>         
            </uib-tabset>
        </div>
        <div class="modal-footer">
            <button   type="button" class="btn btn-default" ng-click="vm.refresh()">refresh</button>
            <button ng-disabled="vm.saving" type="button" class="btn btn-default" ng-click="vm.cancel()">取消</button>
            <button type="submit" button-busy="vm.saving" busy-text="保存中" class="btn btn-primary blue" ng-click="vm.save()" ng-disabled="createOrEditForm.$invalid"><i class="fa fa-save"></i> <span>保存</span></button>
        </div>
    </form>
</div>