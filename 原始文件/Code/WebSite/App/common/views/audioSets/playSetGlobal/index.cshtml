<div ng-controller="common.views.adioSets.playSetGlobal.index as vm">
    <div class="row margin-bottom-5">
        <div class="col-xs-6">
            <div class="page-head">
                <div class="page-title">
                    <h1>
                        <span>全局设置</span>
                    </h1>
                </div>
            </div>
        </div>
    </div>
    <div class="portlet light margin-bottom-0">
        <div class="row">
            <div class="col-md-6">
                <div class="form-group form-md-line-input form-md-floating-label no-hint margin-bottom-0">
                    <label>自动播放行李提取时间间隔（单位：分钟）</label>
                    <input type="number" class="form-control edited" ng-model="vm.entity.autoPlayGetLuaTimeSpan" required />
                </div>
            </div>
            @*<div class="col-md-6">
                <div class="form-group form-md-line-input form-md-floating-label no-hint margin-bottom-0">
                    <label>自动失效时间（单位：分钟）（接收时间 - 到达/出发时间）</label>
                    <input type="number" class="form-control edited" ng-model="vm.entity.unActiveLimitTime" required />
                </div>
            </div>*@
        </div>
        <div class="row">
            <div class="col-md-6">
                <div class="form-group form-md-line-input form-md-floating-label no-hint margin-bottom-0">
                    <label>播放次数</label>
                    <input type="number" class="form-control edited" ng-model=" vm.entity.playTimes" required />
                </div>
            </div>
        </div>
        <div class="row">
            <div class="col-md-6">
                <div class="form-group form-md-line-input form-md-floating-label no-hint margin-bottom-0">
                    <label>可播放语种</label>
                    <div class="md-checkbox-list">
                        <div class="md-checkbox" ng-repeat="item in vm.entity.canPlayLanguages">
                            <input id="EditUser_{{item.id}}" class="md-check" type="checkbox" name="isCanSetAllCarryStation{{item.id}}" ng-model="item.isChecked">
                            <label for="EditUser_{{item.id}}">
                                <span class="inc"></span>
                                <span class="check"></span>
                                <span class="box"></span>
                                {{item.languageName}}
                            </label>
                        </div>
                    </div>
                </div>

            </div>
        </div>
        <div class="modal-footer">
            <button type="button" button-busy="vm.loading" busy-text="刷新中" class="btn btn-default" ng-click="vm.getAll()"><i class="fa fa-refresh"></i> 刷新</button>
            <button type="submit" button-busy="vm.loading" busy-text="保存中" class="btn btn-primary blue" ng-click="vm.save()" ng-disabled="createOrEditForm.$invalid"><i class="fa fa-save"></i> <span>保存</span></button>
        </div>

    </div>
</div>
